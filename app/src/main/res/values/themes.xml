<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OverGarage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grisClaro</item>
        <item name="colorPrimaryVariant">@color/grisMedio</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grisOscuro</item>
        <item name="colorSecondaryVariant">@color/grisOscuro2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HidraButton"
        parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/RojoAcento</item>
        <item name="cornerRadius">3dp</item>
    </style>
</resources>